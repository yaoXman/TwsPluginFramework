<resources>

    <style name="DemoBaseTheme" parent="android:Theme.Light"></style>

    <style name="DemoTheme" parent="DemoBaseTheme">
        <item name="android:buttonStyle">@style/DemoButtonStyle</item>
        <item name="layoutbg">#FF00CC00</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimationInHost</item>
    </style>

    <style name="ActivityAnimationInHost" parent="@android:style/Animation.Activity">
<!--         <item name="android:activityOpenEnterAnimation">@anim/zoom_in</item>
        <item name="android:activityOpenExitAnimation">@anim/zoom_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/zoom_in</item>
        <item name="android:activityCloseExitAnimation">@anim/zoom_out</item> -->
    </style>

    <style name="DemoButtonStyle">
        <item name="android:background">@android:color/black</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="MyButton">
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MyButton2">
        <item name="android:background">#00ffA3</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#e3a438</item>
    </style>

    <style name="MyButton3">
        <item name="android:background">#ffcc0000</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#00ffA3</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <item name="android:buttonStyle">@style/MyButton</item>
        <!-- <item name="android:windowAnimationStyle">@com.tencent.tws.pluginhost:style/ActivityAnimationInHost</item> -->
    </style>

    <!-- Application theme. -->
    <style name="PluginTheme" parent="AppBaseTheme"></style>

    <!-- Application theme. -->
    <style name="PluginTheme2" parent="AppBaseTheme">
        <item name="android:buttonStyle">@style/MyButton2</item>
        <item name="layoutbg">#ffC000CC</item>
    </style>

    <style name="PluginTheme3" parent="android:Theme.Holo.NoActionBar.Fullscreen"></style>

    <style name="PluginTheme4" parent="AppBaseTheme">
        <item name="android:buttonStyle">@style/MyButton3</item>
        <item name="layoutbg">#ff0000CC</item>
    </style>

    <style name="PluginTheme5" parent="AppBaseTheme">
        <item name="android:buttonStyle">@style/MyButton2</item>
        <item name="layoutbg">#ffC000CC</item>
        <item name="testbg">#ffC4C4C4</item>
    </style>

    <style name="PluginTheme6" parent="android:Theme.Holo.Light">
        <item name="android:buttonStyle">@style/MyButton2</item>
        <item name="layoutbg">#ffC000CC</item>
    </style>

    <attr name="custarr_text" format="string|reference" />
    <attr name="custarr_text_color" format="color|reference" />
    <attr name="custarr_text_color_size" format="dimension|reference" />
    <attr name="testbg" format="color|reference" />

    <!--
    不支持下面这种定义方式
    <declare-styleable name="PluginTestCustomAttrView">
        <attr name="custarr_text" format="string|reference"/>
        <attr name="custarr_text_color" format="color|reference"/>
        <attr name="custarr_text_color_size" format="dimension|reference"/>
    </declare-styleable>
    -->

</resources>